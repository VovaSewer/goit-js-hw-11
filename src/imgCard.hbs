
<div class="photo-card">
  <a href="{{largeImageURL}}" class="photo-item">
      <img class="photo-image" src="{{largeImageURL}}" alt="{{tags}}" loading="lazy" />
  </a>
  <div class="info">
    <p class="info-item">
      <b>{{likes}}</b>
    </p>
    <p class="info-item">
      <b>{{views}}</b>
    </p>
    <p class="info-item">
      <b>Comments</b>
      <span>{{comments}}</span>
    </p>
    <p class="info-item">
      <b>downloads</b>
      <span>{{downloads}}</span>
    </p>
  </div>
</div>
